<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:elevation="@dimen/dp_50"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/dp_15">

            <TextView
                    android:id="@+id/tvCancel"
                    style="@style/btnGrey"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Cancel"
                    app:elevation="5dp" />

            <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="New User"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_16" />

            <TextView
                    android:id="@+id/Apply"
                    style="@style/btnBlue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/Save" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_10">

            <TextView
                    android:id="@+id/tvApply"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBackground"
                    android:padding="@dimen/dp_5"
                    android:text="@string/user_information"
                    android:textSize="@dimen/sp_12" />

            <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/colorUnpressed" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:paddingTop="10dp"
                    android:text="First Name"
                    android:textSize="@dimen/sp_14" />

            <EditText
                    android:id="@+id/edtFirstname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@drawable/bg_filter_text"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_40"
                    android:paddingBottom="@dimen/dp_5"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_16" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:paddingTop="10dp"
                    android:text="Last Name"
                    android:textSize="@dimen/sp_14" />

            <EditText
                    android:id="@+id/edtLastname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@drawable/bg_filter_text"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_40"
                    android:paddingBottom="@dimen/dp_5"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_16" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:paddingTop="10dp"
                    android:text="Username"
                    android:textSize="@dimen/sp_14" />

            <EditText
                    android:id="@+id/edtUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@drawable/bg_filter_text"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_40"
                    android:paddingBottom="@dimen/dp_5"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_16" />


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:paddingTop="10dp"
                    android:text="Password"
                    android:textSize="@dimen/sp_14" />

            <EditText
                    android:id="@+id/edtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@drawable/bg_filter_text"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_40"
                    android:paddingBottom="@dimen/dp_5"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_16" />

            <LinearLayout
                    android:id="@+id/llCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:paddingTop="10dp"
                        android:text="Category"
                        android:textSize="@dimen/sp_14" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_30"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_20"
                        android:background="@drawable/bg_filter_text">

                    <TextView
                            android:id="@+id/spCategory"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingRight="@dimen/dp_40"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/sp_16" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/llDistributor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:paddingTop="10dp"
                        android:text="Reports to"
                        android:textSize="@dimen/sp_14" />


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_30"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_20"
                        android:background="@drawable/bg_filter_text">

                    <TextView
                            android:id="@+id/tvReportsto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:drawableRight="@drawable/ic_search"
                            android:paddingRight="@dimen/dp_10"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/sp_16" />
                </LinearLayout>

            </LinearLayout>


            <TextView
                    android:id="@+id/tvHintOrderDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/colorBackground"
                    android:padding="@dimen/dp_5"
                    android:text="@string/contact_detail"
                    android:textSize="@dimen/sp_12" />

            <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/colorUnpressed" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:paddingTop="10dp"
                    android:text="@string/mobile_number"
                    android:textSize="@dimen/sp_14" />

            <EditText
                    android:id="@+id/edtMobileNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@drawable/bg_filter_text"
                    android:inputType="number"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_40"
                    android:paddingBottom="@dimen/dp_5"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_16" />


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:inputType="textEmailAddress"
                    android:paddingTop="10dp"
                    android:text="@string/email"
                    android:textSize="@dimen/sp_14" />

            <EditText
                    android:id="@+id/edtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@drawable/bg_filter_text"
                    android:maxLines="1"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_40"
                    android:paddingBottom="@dimen/dp_5"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_16" />


            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/colorBackground"
                    android:padding="@dimen/dp_5"
                    android:text="@string/others"
                    android:textSize="@dimen/sp_12" />

            <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/colorUnpressed" />

            <LinearLayout
                    android:id="@+id/llUpload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/tvHintDoc"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:text="Add State"
                        android:textSize="@dimen/sp_14" />

                <ImageView
                        android:id="@+id/ivAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_20"
                        android:padding="@dimen/dp_5"
                        android:src="@android:drawable/ic_menu_add"
                        android:tint="@color/colorToolbar" />
            </LinearLayout>

            <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/colorUnpressed" />

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5" />


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp" />

        </LinearLayout>


    </ScrollView>

</LinearLayout>