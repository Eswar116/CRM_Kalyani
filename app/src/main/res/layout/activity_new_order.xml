<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

    <androidx.cardview.widget.CardView
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:elevation="@dimen/dp_50"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/dp_15">

            <TextView
                    android:id="@+id/tvCancel"
                    style="@style/btnGrey"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Cancel" />

            <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Sort"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_16" />

            <TextView
                    android:id="@+id/Apply"
                    style="@style/btnBlue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/Save" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/tvApply"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBackground"
                    android:padding="@dimen/dp_5"
                    android:text="ORDER INFORMATION"
                    android:textSize="@dimen/sp_12" />

            <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/colorUnpressed" />

            <TextView
                    android:id="@+id/tvHintOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:paddingTop="10dp"
                    android:text="Order Owner"
                    android:textSize="@dimen/sp_14"
                    android:visibility="gone" />

            <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_20"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_40"
                    android:paddingBottom="@dimen/dp_5"
                    android:text="John "
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_16" />


            <TextView
                    android:id="@+id/tvHintMarketPlan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:paddingTop="10dp"
                    android:text="Market Plan"
                    android:textSize="@dimen/sp_14" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@drawable/bg_filter_text"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/svMarketPlan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_weight="1"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingRight="@dimen/dp_40"
                        android:paddingBottom="@dimen/dp_5"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp_16" />

                <ImageView
                        android:id="@+id/ivSearchMP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/ic_search" />
            </LinearLayout>


            <TextView
                    android:id="@+id/tvHintName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:paddingTop="10dp"
                    android:text="Customer Name"
                    android:textSize="@dimen/sp_14" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@drawable/bg_filter_text"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/svCustomer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_weight="1"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingRight="@dimen/dp_40"
                        android:paddingBottom="@dimen/dp_5"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp_16" />

                <ImageView
                        android:id="@+id/ivSearch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/ic_search" />
            </LinearLayout>

            <TextView
                    android:id="@+id/tvHintDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:paddingTop="10dp"
                    android:text="Order Date"
                    android:textSize="@dimen/sp_14" />

            <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@drawable/bg_filter_text"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_40"
                    android:paddingBottom="@dimen/dp_5"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_16" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/colorBackground"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/tvHintOrderDetail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/dp_5"
                        android:text="ORDER DETAIL"
                        android:textSize="@dimen/sp_12" />

                <CheckBox
                        android:id="@+id/cvOrder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/dp_10"
                        android:text="No Order" />

            </LinearLayout>

            <TextView
                    android:id="@+id/tvNoBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:paddingTop="10dp"
                    android:text="No Of (Boxes/Pieces)"
                    android:textSize="@dimen/sp_14" />

            <TextView
                    android:id="@+id/tvNoBox2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:paddingTop="10dp"
                    android:text="KB-Bx,KP-Bx,KL-Pc,MS-Pc"
                    android:textSize="@dimen/sp_14" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:orientation="horizontal">

                <EditText
                        android:id="@+id/etBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_weight="1"
                        android:background="@drawable/bg_filter_text"
                        android:inputType="number"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingRight="@dimen/dp_40"
                        android:paddingBottom="@dimen/dp_5"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp_16" />

                <Spinner
                        android:id="@+id/spnBoxes"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_weight="1"
                        style="@android:style/Widget.Spinner.DropDown"
                        android:entries="@array/box_spn"
                        android:paddingTop="@dimen/dp_5"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp_16" />

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/llUpload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/tvHintDoc"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:text="Upload Document "
                        android:textSize="@dimen/sp_14" />

                <ImageView
                        android:id="@+id/ivAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_20"
                        android:padding="@dimen/dp_5"
                        android:src="@android:drawable/ic_menu_add"
                        android:tint="@color/colorToolbar" />
            </LinearLayout>

            <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/colorUnpressed" />

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/colorBackground" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:paddingTop="10dp"
                    android:text="Remarks"
                    android:textSize="@dimen/sp_14" />

            <EditText
                    android:id="@+id/etRemarks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@drawable/bg_filter_text"
                    android:imeOptions="actionDone"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_40"
                    android:paddingBottom="@dimen/dp_5"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_16" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
            android:id="@+id/llDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:padding="@dimen/dp_5"
            android:visibility="visible">

        <ImageView
                android:id="@+id/ivDelete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:backgroundTint="@android:color/white"
                android:backgroundTintMode="src_in"
                android:foregroundTint="@android:color/white"
                android:src="@android:drawable/ic_menu_delete"
                android:tint="#FFFFFF" />

        <ImageView
                android:id="@+id/ivShare"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:backgroundTintMode="src_in"
                android:foregroundTint="@android:color/white"
                android:tint="@android:color/white"
                app:srcCompat="@android:drawable/ic_menu_share" />
    </LinearLayout>


</LinearLayout>