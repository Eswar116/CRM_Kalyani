<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorToolbar</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="dtlTxtDtl">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">@dimen/sp_12</item>

    </style>
    <style name="dtlTxtHdr" parent="dtlTxtDtl">
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="dtlTxtLyout">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:orientation">horizontal</item>


    </style>
    <style name="dtlTxtLyoutmkypln">
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:orientation">horizontal</item>


    </style>
    <style name="EditText.Grey" parent="@style/AppTheme">
        <item name="colorControlActivated">@color/grey_60</item>
        <item name="colorControlHighlight">@color/grey_60</item>
        <item name="colorControlNormal">@color/grey_40</item>
    </style>

    <style name="Checkbox.Blue" parent="@style/AppTheme">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/grey_40</item>
    </style>
    <style name="dtlIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:tint">#000000</item>

    </style>
    <style name="dtlSpratrMain">

        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:background">@color/headlineBackground</item>

    </style>

    <style name="pill">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:radius">5dp</item>

    </style>
    <style name="Toolbar.Light" parent="@style/AppTheme">
        <item name="colorControlNormal">@color/grey_60</item>
        <item name="android:textColorPrimary">@color/grey_60</item>
    </style>

    <!--Buttons-->
    <style name="btn" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textStyle">bold</item>


    </style>
    <style name="btnSky" parent="btn">
        <item name="android:backgroundTint">#12d7f0</item>
        <item name="android:textColor">#FFFFFF</item>


    </style>

    <style name="btnBlue" parent="btn">
        <item name="android:backgroundTint">#28318F</item>
        <item name="android:textColor">#FFFFFF</item>


    </style>

    <style name="btnGrey" parent="btn">
        <item name="android:backgroundTint">#d6d6d6</item>
        <item name="android:textColor">#000000</item>

    </style>


    <style name="ThemeFullscreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
